<Window x:Class="OENIK_PROG4_2019_1_ZNN2DN_UKCWGN.CustomMessageBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OENIK_PROG4_2019_1_ZNN2DN_UKCWGN"
        mc:Ignorable="d"
        Height="150" Width="250"
        Title="2048" Icon="Blackvariant-Button-Ui-Requests-2-2048.ico" WindowStyle="None">
    <Window.DataContext>
        <local:MessageBoxInfos/>
    </Window.DataContext>
    <Grid Background="LightGoldenrodYellow" >
        <TextBlock Height="95" TextAlignment="Center" Margin="55,10,10.333,0" TextWrapping="Wrap" Text="{Binding Msg}" FontSize="20" Foreground="{Binding MsgBrush}" VerticalAlignment="Top" HorizontalAlignment="Center" Width="178"/>
        <Button Content="{Binding Button }" Click="Button_Click" Background="Transparent" BorderBrush="YellowGreen" Foreground="Green" HorizontalAlignment="Center" Margin="0,0,0,10" VerticalAlignment="Bottom" Width="75"/>
        <Image HorizontalAlignment="Left" Source="Blackvariant-Button-Ui-Requests-2-2048.ico" Height="50" Margin="0,0,10,0" VerticalAlignment="Top" Width="50"/>
    </Grid>
</Window>
